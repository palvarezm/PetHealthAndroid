<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.upc.pethealth.fragments.ProfileFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_margin="@dimen/big_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_weight="2"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clProfileInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/layoutImage">

                <TextView
                    android:id="@+id/dniTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_margin="@dimen/big_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/dniDataTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dni"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_margin="@dimen/big_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dniTextView"/>

                <TextView
                    android:id="@+id/phoneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_margin="@dimen/big_margin"
                    android:textColor="@color/colorSecondaryText"
                    app:layout_constraintTop_toBottomOf="@id/dniTextView"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/phoneDataTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="phone"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_margin="@dimen/big_margin"
                    android:textColor="@color/colorPrimaryText"
                    app:layout_constraintTop_toBottomOf="@id/dniDataTextView"
                    app:layout_constraintStart_toEndOf="@id/phoneTextView" />
                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/colorSecondaryText"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_margin="@dimen/big_margin"
                    app:layout_constraintTop_toBottomOf="@id/phoneTextView"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/addressDataTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="address"
                    android:textColor="@color/colorPrimaryText"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_margin="@dimen/big_margin"
                    app:layout_constraintTop_toBottomOf="@id/phoneTextView"
                    app:layout_constraintStart_toEndOf="@id/addressTextView"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

        <android.support.design.button.MaterialButton
            android:id="@+id/editValuesButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_edit_profile"
            android:background="@color/colorAccent"
            android:layout_margin="24dp"
            app:layout_constraintTop_toBottomOf="@id/llProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <RelativeLayout
            android:id="@+id/barRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/editValuesButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/default_margin">
            <include layout="@layout/item_divider"/>
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barRelativeLayout"
            android:layout_margin="@dimen/big_margin">

            <android.support.design.button.MaterialButton
                android:id="@+id/btAddPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="@dimen/minimun_margin"
                android:text="AÃ±adir Mascota"
                android:background="@color/colorAccent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/myPetsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/big_margin"
                android:layout_marginBottom="@dimen/super_big_margin"
                app:layout_constraintTop_toBottomOf="@id/btAddPet">
            </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</ScrollView>