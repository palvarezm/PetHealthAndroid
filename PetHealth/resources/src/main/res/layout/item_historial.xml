<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/motiveTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivo: "
            android:layout_margin="@dimen/big_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/motiveTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginBottom="@dimen/minimun_margin"
            android:text="Motive"
            app:layout_constraintStart_toEndOf="@id/motiveTitleView"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/diagnosisTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Diagnosis"
            android:layout_marginTop="@dimen/minimun_margin"
            android:layout_marginBottom="@dimen/big_margin"
            android:layout_marginHorizontal="@dimen/big_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/motiveTextView"/>
        <View
            android:id="@+id/historySegmentView"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginHorizontal="@dimen/big_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>