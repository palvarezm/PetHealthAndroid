<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/minimun_margin"
    app:cardElevation="@dimen/default_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/chatImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            style="@style/AVLoadingIndicatorView"
            android:visibility="visible"
            app:indicatorName="BallPulseIndicator"
            app:indicatorColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/chatNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat Name"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/chatImageView"/>
        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textColor="@color/colorSecondaryText"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginLeft="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/chatNameTextView"
            app:layout_constraintStart_toEndOf="@id/chatImageView"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>