<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.upc.pethealth.fragments.MyPetDescriptionFragment">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Pet"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_margin="@dimen/big_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/petImageView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/animalTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_margin="@dimen/default_margin"
        android:text="Animal Type: "
        android:textColor="@color/colorSecondaryText"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/petImageView"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/petAnimalTypeValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="Animal Type"
        android:textColor="@color/colorSecondaryText"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/petImageView"
        app:layout_constraintStart_toEndOf="@id/animalTypeTextView"/>
    <TextView
        android:id="@+id/raceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/default_margin"
        android:text="Race: "
        android:textColor="@color/colorSecondaryText"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/animalTypeTextView"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/petRaceValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/default_margin"
        android:text="Race"
        android:textColor="@color/colorSecondaryText"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/petAnimalTypeValueTextView"
        app:layout_constraintStart_toEndOf="@id/raceTextView"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/default_margin"
        android:text="Description: "
        android:textColor="@color/colorSecondaryText"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/raceTextView"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/descriptionValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/default_margin"
        android:text="Description"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorSecondaryText"
        app:layout_constraintStart_toEndOf="@id/descriptionTextView"
        app:layout_constraintTop_toBottomOf="@id/petRaceValueTextView"/>


</androidx.constraintlayout.widget.ConstraintLayout>
